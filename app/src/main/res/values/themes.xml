<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ToDoApp" parent="Theme.Material3.DayNight">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="colorPrimary">@color/blue_700</item>
        <item name="colorOnSurface">@color/blue_gray_900</item>
        <item name="colorOnSurfaceVariant">@color/blue_gray_400</item>
        <item name="colorPrimaryContainer">@color/blue_gray_100</item>
        <item name="colorPrimarySurface">@color/blue_200</item>

        <item name="colorPrimaryVariant">@color/blue_700</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="RowLayoutTextTitle">
        <item name="android:textColor">?attr/colorOnSurfaceVariant</item>
        <item name="android:maxLength">20</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="RowLayoutTextDescription">
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:maxLength">300</item>
        <item name="android:maxLines">10</item>
    </style>

    <style name="RowLayoutPriorityIndicator">
        <item name="strokeWidth">0dp</item>
        <item name="cardCornerRadius">100dp</item>
    </style>

    <style name="RowLayoutMaterialCard">
        <item name="strokeColor">?attr/colorPrimaryContainer</item>
        <item name="strokeWidth">1dp</item>
        <item name="cardCornerRadius">16dp</item>
    </style>

    <style name="FragmentListFAB">
        <item name="backgroundTint">?attr/colorPrimarySurface</item>
    </style>

    <style name="Theme.ToDoApp" parent="Base.Theme.ToDoApp" />
</resources>